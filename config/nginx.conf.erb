upstream frontend {
    server $FRONTEND_URL;
}

upstream backend {
    server $BACKEND_URL;
}

server {
    listen 3000;

    location / {
        proxy_pass http://test-pipeline-dev-az.herokuapp.com;
        proxy_set_header Host $FRONTEND_URL;
    }

    location /api {
        rewrite /api/(.*) /$1 break;
        proxy_pass http://test-pipeline-prod-az.herokuapp.com;
        proxy_set_header Host $BACKEND_URL;
        proxy_set_header Cookie $http_cookie;
    }

}
